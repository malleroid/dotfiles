{
  "statusLine": {
    "type": "command",
    "command": "input=$(cat); cwd=$(echo \"$input\" | jq -r '.workspace.current_dir'); model=$(echo \"$input\" | jq -r '.model.display_name'); git_branch=$(git -C \"$cwd\" --no-optional-locks rev-parse --abbrev-ref HEAD 2>/dev/null); if [ -n \"$git_branch\" ]; then printf '%s   %s   %s' \"$(date +%H:%M:%S)\" \"$cwd\" \"$git_branch\"; else printf '%s   %s' \"$(date +%H:%M:%S)\" \"$cwd\"; fi"
