      "Bash(which *)",
      "WebFetch(domain:biomejs.dev)",
      "WebFetch(domain:docs.renovatebot.com)",
      "WebFetch(domain:github.blog)",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:google.github.io)",
